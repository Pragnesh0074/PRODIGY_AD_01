<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/round_cor_box"
        app:columnCount="4"
        app:columnOrderPreserved="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rowCount="5"> <!-- Ensure 4 columns are defined -->

        <Button
            android:id="@+id/ac_btn"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ac_btn"
            app:backgroundTint="@null"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="center"
            app:layout_row="0"
            app:layout_rowWeight="1"
            app:rippleColor="#DAD5D5" />

        <Button
            android:id="@+id/dot_btn"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="30dp"
            android:text="."
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="@android:color/transparent"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_gravity="center"
            app:layout_row="4"
            app:layout_rowWeight="1"
            app:rippleColor="#DAD5D5" />

        <Button
            android:id="@+id/dzero_btn"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="30dp"
            android:text="00"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="@android:color/transparent"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="center"
            app:layout_row="4"
            app:layout_rowWeight="1"
            app:rippleColor="#DAD5D5" />

        <Button
            android:id="@+id/zero_btn"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="30dp"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="@android:color/transparent"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="center"
            app:layout_row="4"
            app:layout_rowWeight="1"
            app:rippleColor="#DAD5D5" />

        <Button
            android:id="@+id/total_btn"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/total_btn"
            app:backgroundTint="@null"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_gravity="center"
            app:layout_row="3"
            app:layout_rowSpan="2"
            app:layout_rowWeight="1"
            app:rippleColor="#DAD5D5" />

        <Button
            android:id="@+id/three_btn"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:layout_marginTop="7dp"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="@android:color/transparent"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_gravity="center"
            app:layout_row="3"
            app:layout_rowWeight="1"
            app:rippleColor="#DAD5D5" />

        <Button
            android:id="@+id/one_btn"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:layout_marginTop="7dp"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="@android:color/transparent"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="center"
            app:layout_row="3"
            app:layout_rowWeight="1"
            app:rippleColor="#DAD5D5" />

        <Button
            android:id="@+id/two_btn"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:layout_marginTop="7dp"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="@android:color/transparent"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="center"
            app:layout_row="3"
            app:layout_rowWeight="1"
            app:rippleColor="#DAD5D5" />

        <Button
            android:id="@+id/sub_btn"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/sub_btn"
            android:text="-"
            android:textColor="@android:color/transparent"
            app:backgroundTint="@null"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_gravity="center"
            app:layout_row="2"
            app:layout_rowWeight="1"
            app:rippleColor="#DAD5D5" />

        <Button
            android:id="@+id/six_btn"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:layout_marginTop="7dp"
            android:text="6"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="@android:color/transparent"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_gravity="center"
            app:layout_row="2"
            app:layout_rowWeight="1"
            app:rippleColor="#DAD5D5" />

        <Button
            android:id="@+id/four_btn"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:layout_marginTop="7dp"
            android:text="4"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="@android:color/transparent"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="center"
            app:layout_row="2"
            app:layout_rowWeight="1"
            app:rippleColor="#DAD5D5" />

        <Button
            android:id="@+id/five_btn"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:layout_marginTop="7dp"
            android:text="5"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="@android:color/transparent"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="center"
            app:layout_row="2"
            app:layout_rowWeight="1"
            app:rippleColor="#DAD5D5" />

        <Button
            android:id="@+id/add_btn"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/add_btn"
            android:text="+"
            android:textColor="@android:color/transparent"
            app:backgroundTint="@null"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_gravity="center"
            app:layout_row="1"
            app:layout_rowWeight="1"
            app:rippleColor="#DAD5D5" />

        <Button
            android:id="@+id/nine_btn"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:layout_marginTop="7dp"
            android:text="9"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="@android:color/transparent"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_gravity="center"
            app:layout_row="1"
            app:layout_rowWeight="1"
            app:rippleColor="#DAD5D5" />

        <Button
            android:id="@+id/seven_btn"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:layout_marginTop="7dp"
            android:text="7"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="@android:color/transparent"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="center"
            app:layout_row="1"
            app:layout_rowWeight="1"
            app:rippleColor="#DAD5D5" />

        <Button
            android:id="@+id/eight_btn"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:layout_marginTop="7dp"
            android:text="8"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="@android:color/transparent"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="center"
            app:layout_row="1"
            app:layout_rowWeight="1"
            app:rippleColor="#DAD5D5" />

        <Button
            android:id="@+id/div_btn"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/div_btn"
            android:text="/"
            android:textColor="@android:color/transparent"
            app:backgroundTint="@null"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_gravity="center"
            app:layout_row="0"
            app:layout_rowWeight="1"
            app:rippleColor="#DAD5D5" />

        <Button
            android:id="@+id/mod_btn"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/mod_btn"
            android:text="%"
            android:textColor="@android:color/transparent"
            app:backgroundTint="@null"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="center"
            app:layout_row="0"
            app:layout_rowWeight="1"
            app:rippleColor="#DAD5D5" />

        <Button
            android:id="@+id/mul_btn"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/mul_btn"
            android:text="*"
            android:textColor="@android:color/transparent"
            app:backgroundTint="@null"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_gravity="center"
            app:layout_row="0"
            app:layout_rowWeight="1"
            app:rippleColor="#DAD5D5" />
    </androidx.gridlayout.widget.GridLayout>


    <TextView
        android:id="@+id/resultDisplay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="viewEnd"
        android:textColor="#FFFFFF"
        android:textDirection="ltr"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/equationDisplay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="viewEnd"
        android:textColor="#FFFFFF"
        android:textDirection="ltr"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/resultDisplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

